<tiles-definitions>
	<!-- default layout 
    <definition   name=".default"      template="/WEB-INF/jsp/template/default/defaultTemplate.jsp">
		<put-attribute name="header"   value="/WEB-INF/jsp/template/default/include/header.jsp" />
		<put-attribute name="left"     value="/WEB-INF/jsp/template/default/include/left.jsp" />
		<put-attribute name="footer"   value="/WEB-INF/jsp/template/default/include/footer.jsp" />
		<put-attribute name="contents" value="/WEB-INF/jsp/template/default/include/blank.jsp" />
	</definition>  -->
	 <!-- default
	 <definition name="default/*" extends=".default">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/tilesView/{1}.jsp" />    
	 </definition>         
	 <definition name="default/*/*" extends=".default">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/tilesView/{1}/{2}.jsp" />    
	 </definition>         
	 <definition name="default/*/*/*" extends=".default">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/tilesView/{1}/{2}/{3}.jsp" />    
	 </definition>    -->   
	 
	 
	 
	 <!-- system layout  -->
    <definition   name=".system" template="/WEB-INF/jsp/template/system/systemTemplate.jsp">
		<put-attribute name="header"   value="/WEB-INF/jsp/template/system/include/header.jsp" />
		<put-attribute name="footer"   value="/WEB-INF/jsp/template/system/include/footer.jsp" />
		<put-attribute name="contents" value="/WEB-INF/jsp/template/system/include/blank.jsp" />
	</definition>
	 <definition name="system/*" extends=".system">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}.jsp" />    
	 </definition>         
	 <definition name="system/*/*" extends=".system">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}.jsp" />    
	 </definition>         
	 <definition name="system/*/*/*" extends=".system">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}/{3}.jsp" />    
	 </definition>     
	
	 <!-- systemSingle layout-->
	<definition name=".systemSingle" template="/WEB-INF/jsp/template/single/singleTemplate.jsp">
		<put-attribute name="contents" value="/WEB-INF/jsp/template/default/include/blank.jsp" />
	</definition>
	 <definition name="systemSingle/*" extends=".systemSingle">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}.jsp" />    
	 </definition>         
	 <definition name="systemSingle/*/*" extends=".systemSingle">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}.jsp" />    
	 </definition>         
	 <definition name="systemSingle/*/*/*" extends=".systemSingle">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}/{3}.jsp" />    
	 </definition>  
	 
	 
	 
	 <!-- gyeRest layout  -->
    <definition   name=".gyeRest" template="/WEB-INF/jsp/template/gyeRest/restTemplate.jsp">
		<put-attribute name="header"   value="/WEB-INF/jsp/template/gyeRest/include/header.jsp" />
		<put-attribute name="footer"   value="/WEB-INF/jsp/template/gyeRest/include/footer.jsp" />
		<put-attribute name="left"     value="/WEB-INF/jsp/template/gyeRest/include/left.jsp" />
		<put-attribute name="contents" value="/WEB-INF/jsp/template/gyeRest/include/blank.jsp" />
	</definition>
	 <definition name="rest/*" extends=".gyeRest">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}.jsp" />    
	 </definition>         
	 <definition name="rest/*/*" extends=".gyeRest">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}.jsp" />    
	 </definition>         
	 <definition name="rest/*/*/*" extends=".gyeRest">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}/{3}.jsp" />    
	 </definition>
	     
	 <!-- gye layout(모바일)-->
    <definition   name=".gye"      template="/WEB-INF/jsp/template/gye/defaultTemplate.jsp">
		<put-attribute name="header"   value="/WEB-INF/jsp/template/gye/include/header.jsp" />
		<put-attribute name="footer"   value="/WEB-INF/jsp/template/gye/include/footer.jsp" />
		<put-attribute name="contents" value="/WEB-INF/jsp/template/gye/include/blank.jsp" />
	</definition> 
	 <definition name="gye/*" extends=".gye">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}.jsp" />    
	 </definition>         
	 <definition name="gye/*/*" extends=".gye">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}.jsp" />    
	 </definition>         
	 <definition name="gye/*/*/*" extends=".gye">        
	 	<put-attribute name="contents" value="/WEB-INF/jsp/view/{1}/{2}/{3}.jsp" />    
	 </definition>      
	 
</tiles-definitions>



